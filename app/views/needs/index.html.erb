<div class="container">
  <div class="row">
    <center>
      <div class="centered">
        <div class="col-md-12">
          <div class="row carousel-holder">
            <div class="col-md-12">
              <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                  <div class="item active">
                    <%= image_tag "girl_and_goat.jpg", width: "900px", padding: "10px" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <h3> <%#= @category.name %> </h3>
          <br>

        <div class="row">
          <% @needs.each do |need| %>
            <div class="col-sm-4 col-lg-4 col-md-4">
              <div class="thumbnail">
                <%= image_tag "#{need.image_url}", class: "img-rounded catalog", crop: "fill" %>
                <div class="caption">
                  <h4><a href="#"><%= need.name %></a></h4>
                  <h4><%= number_to_currency(need.cost) %></h4>
                </div>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </center>
  </div>
</div>
